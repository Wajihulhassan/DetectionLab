#! /bin/bash
screen -d -m -S logger
screen -S logger -X stuff "./loggerScript \n"
screen -S logger -X stuff "screen -S logger -X kill \n"
printf "How many Screens Do you want?"
read NUMBER
for (( i=1; i<=$NUMBER; i++ ))
do
	screen -d -m -S screen_$i
	CMD="./singleVM $i"
	screen -S screen_$i -X stuff "$CMD \n"
	screen -S screen_$i -X stuff "screen -S screen_$i -X kill \n"
done
